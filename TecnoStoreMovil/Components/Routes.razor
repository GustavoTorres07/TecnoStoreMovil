@namespace TecnoStoreMovil.Components

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="@typeof(TecnoStoreMovil.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(TecnoStoreMovil.Components.Layout.MainLayout)">
            <div class="container py-5">
                <h4>Página no encontrada</h4>
                <p class="text-muted">La ruta solicitada no existe.</p>
                <a href="/login" class="btn btn-primary">Ir al Login</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>