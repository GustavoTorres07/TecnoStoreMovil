.login-wrapper {
  min-height: 100vh;
  background: radial-gradient(1200px 600px at 10% -20%, #0d6efd22, transparent),
              radial-gradient(1000px 500px at 110% 120%, #6f42c122, transparent),
              #0f1115;
}

.login-card {
  width: 100%;
  max-width: 420px;
  border-radius: 1rem;
  background-color: #1b1f2a;
  color: #e9ecef;
}

.login-card .form-control,
.login-card .btn,
.login-card .form-check-input {
  border-radius: .6rem;
}

.login-card .form-label {
  color: #cfd3da;
}

/* Bootstrap override para modo oscuro del card */
.card {
  background-color: #1b1f2a;
}

.alert {
  border-radius: .6rem;
}
