@page "/acercade"
@inject NavigationManager Nav

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <!-- Foto de perfil -->
                    <img src="img/mi_foto_perfil.jpg"
                         alt="Foto de Gustavo Torres"
                         class="rounded-circle mb-3 shadow-sm"
                         style="width: 140px; height: 140px; object-fit: cover;" />

                    <!-- Nombre -->
                    <h4 class="card-title mb-1">Gustavo Torres</h4>
                    <p class="text-muted mb-3">Desarrollador de Software · TSDS</p>

                    <!-- Descripción -->
                    <p class="card-text">
                        Esta aplicación fue desarrollada como parte del TP 4 <strong>TecnoStore</strong>.
                        El objetivo es implementar Api Rest y Bases de Datos en un e-commerce con funcionalidades
                        modernas, aplicando <em> Blazor Hybrid</em> y API Rest.
                    </p>

                    <!-- Info adicional -->
                    <div class="d-flex flex-column align-items-center mt-3">
                        <div><i class="bi bi-envelope me-2"></i> gustavo@correo.com</div>
                        <div><i class="bi bi-github me-2"></i> <a href="https://github.com/" target="https://github.com/GustavoTorres07s">Mi GitHub</a></div>
                        <div><i class="bi bi-linkedin me-2"></i> <a href="https://linkedin.com/" target="https://www.linkedin.com/in/gustavo-emanuel-torres-79592b217/">Mi LinkedIn</a></div>
                    </div>

                    <!-- Botón volver -->
                    <div class="mt-4">
                        <button class="btn btn-outline-primary" @onclick="Volver">
                            <i class="bi bi-arrow-left-circle me-1"></i> Volver
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    void Volver() => Nav.NavigateTo("/");
}
