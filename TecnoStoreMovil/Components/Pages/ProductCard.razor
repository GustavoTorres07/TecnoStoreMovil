@using TecnoStoreMovil.Shared.DTOs

<div class="card h-100 shadow-sm">
    <img class="card-img-top" src="@ImgOrPlaceholder(Model.ImagenUrl)" alt="@Model.Nombre" loading="lazy">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="card-title mb-0">@Model.Nombre</h6>
            <span class="badge rounded-pill badge-soft">@Model.Categoria</span>
        </div>
        <p class="card-text text-muted small flex-grow-1">@Model.Descripcion</p>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <strong class="fs-6">@Model.Precio.ToString("C")</strong>
            <button class="btn btn-sm btn-primary" @onclick="() => OnPrimaryClick.InvokeAsync(Model)">
                <i class="bi bi-cart-plus"></i> Agregar
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public ProductoDto Model { get; set; } = default!;
    [Parameter] public EventCallback<ProductoDto> OnPrimaryClick { get; set; }

    string ImgOrPlaceholder(string? url)
        => string.IsNullOrWhiteSpace(url) ? "https://picsum.photos/600/400?random=12" : url!;
}
