@using Microsoft.AspNetCore.Components
@using TecnoStoreMovil.Shared.DTOs

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrWhiteSpace(Producto.ImagenUrl))
    {
        <img src="@Producto.ImagenUrl" class="card-img-top" alt="@Producto.Nombre" />
    }
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Producto.Nombre</h5>
        <h6 class="card-subtitle text-muted mb-2">@Producto.Categoria</h6>

        <p class="card-text text-muted flex-grow-1">@Producto.Descripcion</p>

        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="fw-bold">@Producto.Precio.ToString("C")</span>
            <span class="badge @(Producto.Stock > 0 ? "bg-success" : "bg-danger")">
                @(Producto.Stock > 0 ? $"Stock: {Producto.Stock}" : "Sin stock")
            </span>
        </div>

        <div class="d-flex justify-content-between">
            @if (OnPrimaryAction is not null)
            {
                <button class="btn btn-primary btn-sm" @onclick="() => OnPrimaryAction!(Producto.Id)">
                    <i class="bi bi-cart-plus"></i> @PrimaryText
                </button>
            }
            <div class="btn-group">
                @if (OnEdit is not null)
                {
                    <button class="btn btn-outline-primary btn-sm" @onclick="() => OnEdit!(Producto.Id)">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                }
                @if (OnDelete is not null)
                {
                    <button class="btn btn-outline-danger btn-sm" @onclick="() => OnDelete!(Producto.Id)">
                        <i class="bi bi-trash"></i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public required ProductoDto Producto { get; set; }

    // Acción principal (cliente: "Agregar"; admin: "Editar" si querés reutilizar)
    [Parameter] public string PrimaryText { get; set; } = "Agregar";
    [Parameter] public Action<int>? OnPrimaryAction { get; set; }

    // Acciones secundarias para Admin
    [Parameter] public Action<int>? OnEdit { get; set; }
    [Parameter] public Action<int>? OnDelete { get; set; }
}
